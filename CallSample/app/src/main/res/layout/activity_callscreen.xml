<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/audio_call_header_layout"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"></LinearLayout>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/contact_avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/defaultcontact" />

    <Button
        android:id="@+id/answer_call_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/textView12"
        android:layout_toLeftOf="@+id/view"
        android:layout_toStartOf="@+id/view"
        android:background="@drawable/ui_answer_call"
        android:textColor="@color/black_50" />

    <Button
        android:id="@+id/end_call_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/answer_call_button"
        android:layout_toEndOf="@+id/view"
        android:layout_toRightOf="@+id/view"
        android:background="@drawable/uiendcall1"
        android:textColor="@color/color_white" />

    <TextView
        android:id="@+id/contact_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="CallType"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/contact_number_tv"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="@color/color_white" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="@color/color_white" />

    <View
        android:id="@+id/view"
        android:layout_width="80dp"
        android:layout_height="16dp"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@color/background" />

    <TextView
        android:id="@+id/call_screen_help_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:text="On Clicking Answer any existing call/s will be disconnected." />
</RelativeLayout>