<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/transparent"
    android:padding="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/infoimageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:padding="8dp"
            android:src="@drawable/info_nor1" />


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/text1"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/defaultcontact"
            card_view:civ_border_width="0.1dp" />


        <TextView
            android:id="@+id/text1"
            style="@style/myFontLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/infoimageView"
            android:layout_toRightOf="@+id/imageview"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/text1"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/imageview"
            android:src="@drawable/outgoingcall" />

        <TextView
            android:id="@+id/text2"
            style="@style/myFontLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/infoimageView"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingRight="4dp"
            android:text="Date"
            android:textColor="@color/black_50"
            android:textSize="12dp"

            />

        <!--
            <com.cavox.views.CustomTextView
                android:layout_marginLeft="5dp"
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@+id/text2"
                style="@style/myFontThin"
                android:textSize="@dimen/text_size_12"
                android:maxLines="1"
                android:text="Duration"
                android:textColor="@color/black_50"
                android:layout_alignLeft="@+id/text2"
                android:layout_alignStart="@+id/text2"
                android:layout_toLeftOf="@+id/infoimageView"/>
                -->
        <TextView
            android:id="@+id/text4"
            style="@style/myFontLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/text2"
            android:layout_toRightOf="@+id/imageview1"
            android:maxLines="1"
            android:text="calltype"
            android:textColor="@color/black_50"
            android:textSize="12dp"

            />
    </RelativeLayout>
</RelativeLayout>