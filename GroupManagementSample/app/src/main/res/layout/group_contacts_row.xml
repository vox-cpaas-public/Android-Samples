<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_12dp"
    android:background="@drawable/default_selector"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:descendantFocusability="blocksDescendants" >
    <!--todo button-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp" >
            <com.mikhaellopez.circularimageview.CircularImageView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageview"
                android:layout_width="42dp"
                android:layout_height="42dp"
                card_view:civ_border_width="2dp"
                android:layout_gravity="center"
                android:src="@drawable/defaultcontact" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8dp"
            android:orientation="vertical" >
            <RelativeLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/text1"
                    android:layout_toLeftOf="@+id/isadmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text=""
                    style="@style/myFontLight"
                    android:textSize="@dimen/text_size_17"
                    android:singleLine="true"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/isadmin"

                    android:text="Group Admin"
                    android:paddingTop="@dimen/padding_4dp"
                    android:paddingBottom="@dimen/padding_4dp"
                    android:paddingLeft="@dimen/padding_8dp"
                    android:paddingRight="@dimen/padding_8dp"
                    style="@style/myFontLight"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:background="@drawable/admin_oval_bg"
                    android:textSize="10sp"
                    android:textColor="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>



            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                style="@style/myFontThin"
                android:textSize="@dimen/text_size_14"

                android:paddingRight="@dimen/padding_4dp"
                android:singleLine="true"
                android:text=""
                android:layout_marginTop="@dimen/margin_4dp"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>