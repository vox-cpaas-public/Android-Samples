<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >
    <!--todo button-->
    <com.mikhaellopez.circularimageview.CircularImageView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        card_view:civ_border_width="2dp"
        android:src="@drawable/defaultcontact"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/text1"
        style="@style/myFontLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingRight="1dp"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_toLeftOf="@+id/time"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6"
        android:layout_above="@+id/text2" />
        <TextView
            android:id="@+id/text2"
            style="@style/myFontLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="1dp"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/black_50"
            android:textSize="16dp"
android:paddingBottom="10dp"
            android:layout_alignTop="@+id/time"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_toLeftOf="@+id/time"
            android:layout_alignBottom="@+id/time" />
    <TextView
        android:id="@+id/time"
        style="@style/myFontLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingRight="1dp"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/white_50"
        android:textSize="16dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/unreadcount"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/unreadcount"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/badge_circle1"
        android:textColor="@color/color_white"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_alignRight="@+id/time"
        android:layout_alignEnd="@+id/time"
        android:visibility="invisible"
        />
</RelativeLayout>