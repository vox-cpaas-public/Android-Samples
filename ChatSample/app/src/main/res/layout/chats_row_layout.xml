<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--todo button-->


    <ImageView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/defaultcontact"
        />


    <TextView

        android:id="@+id/text1"
        style="@style/myFontLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text2"
        android:layout_toEndOf="@+id/imageView6"
        android:layout_toLeftOf="@+id/time"
        android:layout_toRightOf="@+id/imageView6"
        android:gravity="left"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="1dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView

        android:id="@+id/text2"
        style="@style/myFontLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/time"
        android:layout_alignTop="@+id/time"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/time"
        android:layout_toRightOf="@+id/imageView6"
        android:gravity="left"
        android:maxLines="1"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="1dp"
        android:text=""
        android:textColor="@color/black_50"
        android:textSize="12sp" />

    <TextView

        android:id="@+id/time"
        style="@style/myFontLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/unreadcount"
        android:layout_marginRight="5dp"
        android:gravity="left"
        android:maxLines="1"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="1dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/unreadcount"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/time"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/time"
        android:layout_marginRight="5dp"
        android:background="@drawable/badge_circle1"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="invisible" />

</RelativeLayout>